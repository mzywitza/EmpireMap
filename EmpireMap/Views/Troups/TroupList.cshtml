@model IEnumerable<EmpireMap.Models.Troup>

@{
    ViewBag.Title = "Truppenübersicht";
}
<h3>@ViewBag.Title</h3>

    <div id="grid">
        <table id="gtable">
            <thead>
                <tr>
                    <th>Welt</th>
                    <th>Spieler</th>
                    <th>Deff</th>
                    <th>Off</th>
                    <th>Ress</th>
                    <th>Stand</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                    <td>@c.Map.Name</td>
                    <td>@c.Player.Name</td>
                    <td>@c.Deff<br />@c.EnhancedDeff</td>
                    <td>@c.Off<br />@c.EnhancedOff</td>
                    <td>
                        <span class="@(c.Wood == 1 ? "green" : c.Wood == -1 ? "red" : "neutral")">Holz</span><br />
                        <span class="@(c.Stone == 1 ? "green" : c.Stone == -1 ? "red" : "neutral")">Stein</span>
                    </td>
                    <td>@c.LastUpdated</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

<div>@Html.ActionLink("Download","CsvList")</div>

<script type="text/javascript">
    $(function () {
        oTable = $("#gtable").dataTable({
            "bJQueryUI": true,
            "bPaginate": false,
            "bLengthChange": true,
            "bFilter": true,
            "bInfo": false,
            oLanguage: {
                sSearch: "Suche:"
            },
            "aoColumns": [
                  null,
                  null,
                  { "bSortable": false },
                  { "bSortable": false },
                  { "bSortable": false },
                  { "sSortDataType": "dom-text", "sType": "date" }

            ]
        });

    });
</script>