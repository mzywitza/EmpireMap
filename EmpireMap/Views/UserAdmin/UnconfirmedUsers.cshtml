@model List<EmpireMap.Models.UnconfirmedUserModel>
<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            @if (Model.Count > 0)
            {
                <h1>Freischaltung.</h1>
                <h2>Es müssen noch Benutzer freigeschaltet werden.</h2>
            }
            else
            {
                <h2>Alle Benutzer sind freigeschaltet.</h2>   
            }
        </hgroup>
        @if (Model.Any())
        {
            using (Html.BeginForm("Confirm","UserAdmin"))
            {
            <table>
                @for (var i = 0; i < Model.Count; i++)
                {
                    var user = Model[i];
                    <tr>
                        <td>@user.PlayerName</td>
                        <td>(@user.UserName)</td>
                        <td>mit @user.Castles Burgen</td>
                        <td>
                            @Html.HiddenFor(model => model[i].PlayerId)
                            @Html.HiddenFor(model => model[i].UserId)
                            @Html.CheckBoxFor(model => model[i].Confirm) Freischalten
                            @Html.CheckBoxFor(model => model[i].Leadership) Allianzführung
                        </td>

                    </tr>
                }
            </table>
            <p>
                <input type="submit" value="Freischalten" /></p>
            }
        }
    </div>
</section>

